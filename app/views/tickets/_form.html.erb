<%= bootstrap_form_with model: [project, ticket] do |form| %>
  <%= form.text_field :name %>
  <%= form.text_area :description %>
  <div class="dropzone uploader mb-2" data-url="<%= upload_file_project_tickets_path(project) %>"></div>
  <div class="form-group tags">
    <div><%= label_tag :tag_names, 'Tags' %></div>
    <%= render ticket.tags %>
    <%= text_field_tag :tag_names, "", class: "form-control" %>
  </div>
  <br>
  <%= form.primary %>
<% end %>
